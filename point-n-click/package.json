{
  "name": "point-n-click",
  "version": "2.0.0-alpha.1",
  "description": "Adventure game engine, from text to graphical",
  "license": "MIT",
  "main": "./dist/dsl/index.js",
  "module": "./dist/dsl-es/index.js",
  "types": "./dist/types.d.ts",
  "targets": {
    "dsl": {
      "source": "./src/index.ts",
      "context": "node",
      "isLibrary": true
    },
    "dsl-es": {
      "source": "./src/index.ts",
      "context": "node",
      "outputFormat": "esmodule",
      "isLibrary": true
    },
    "web": {
      "source": "./src/web/contents.ts",
      "context": "browser",
      "isLibrary": true
    }
  },
  "scripts": {
    "build": "parcel build",
    "watch": "parcel watch",
    "serve": "parcel serve src/web/index.html"
  },
  "bin": "./bin/point-n-click.js",
  "files": [
    "bin/",
    "dist/",
    "web-client/"
  ],
  "devDependencies": {
    "@parcel/config-default": "^2.7.0",
    "@parcel/packager-ts": "2.7.0",
    "@parcel/transformer-typescript-types": "2.7.0",
    "@types/node": "16",
    "parcel": "^2.7.0",
    "ts-node": "^10.9.1",
    "tty-browserify": "^0.0.1",
    "typescript": "~4.7.3",
    "url": "^0.11.0",
    "util": "^0.12.4"
  },
  "dependencies": {
    "@parcel/core": "^2.7.0",
    "@parcel/fs": "^2.7.0",
    "commander": "^9.4.1",
    "immer": "^9.0.15",
    "source-map": "^0.7.4"
  }
}
